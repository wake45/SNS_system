<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>계정 페이지</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-b from-slate-800 to-slate-600 text-white min-h-screen p-4">

  <div class="max-w-3xl mx-auto bg-white text-black rounded-xl shadow-lg p-6">
    <!-- 프로필 영역 -->
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <img
          src="{{user.profile.profile_picture}}"
          alt="프로필 사진"
          class="w-20 h-20 rounded-full border-2 border-blue-400 cursor-pointer"
          onclick="handleProfileClick()"
        />
        <div>
          <h2 class="text-xl font-semibold">{{user.profile.name}}</h2>
          <p class="text-gray-600">{{user.profile.bio}}</p>
          <div class="flex gap-4 mt-1">
            <button onclick="handleFollowerClick()" class="text-blue-500 hover:underline">
              팔로워: <span id="followerCount">{{user.followers.length}}</span>명
            </button>
            <button onclick="handleFollowingClick()" class="text-blue-500 hover:underline">
              팔로잉: <span id="followingCount">{{user.following.length}}</span>명
            </button>
          </div>
        </div>
      </div>
      <!-- 본인 계정일 경우만 로그아웃 버튼 노출 -->
      <div id="myPageButtons" class="space-x-2">
        <button class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400" onclick="goHome()">홈화면</button>
        <button class="px-4 py-2 bg-gray-300 rounded-md hover:bg-gray-400" onclick="logout()">로그아웃/채팅</button>
      </div>
    </div>

    <!-- 피드 섹션 -->
    <div class="grid grid-cols-3 gap-4 mt-6">
      <!-- 피드 항목은 동적으로 생성될 수 있습니다 -->
    </div>

    <!-- 글쓰기 / 팔로우 버튼 -->
    <div class="mt-6">
      <button id="writeOrFollowButton" class="w-full py-3 bg-gray-300 rounded-md hover:bg-gray-400">
        글쓰기 / 팔로우
      </button>
    </div>
  </div>

  <script>
    const isMyPage = true; // ← 로그인한 유저의 마이페이지면 true, 다른 유저 계정이면 false

    window.onload = () => {
      if (!isMyPage) {
        document.getElementById("myPageButtons").style.display = "none";
        document.getElementById("writeOrFollowButton").innerText = "팔로우";
      } else {
        document.getElementById("writeOrFollowButton").innerText = "글쓰기";
      }
    };

    function handleProfileClick() {
      if (!isMyPage) return;
      alert("프로필 사진 변경 기능 실행");
    }

    function handleFollowerClick() {
      alert("팔로워 목록 팝업");
    }

    function handleFollowingClick() {
      alert("팔로잉 목록 팝업");
    }

    function handleFeedClick(feedId) {
      alert(`피드 ${feedId} 클릭 - 확대 및 댓글 보기`);
    }

    function goHome() {
      alert("홈화면으로 이동");
    }

    function logout() {
      alert("로그아웃 처리 및 로그인 화면으로 이동");
    }
  </script>
</body>
</html>
